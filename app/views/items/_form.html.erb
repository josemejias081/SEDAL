<%= form_for [@evaluation, @item] do |f| %>
  <% @item.errors.full_messages.each do |message| %>
    <div>
      <%=message%>
    </div>
  <% end %>
    <div>
      <%= f.label "Campo para crear items" %>
      <%= f.text_area :description, class: 'form-control', placeholder: 'Crear item aqui...' %><br>
      <label>Asignar escala:</label><br>
      <%= f.collection_select(:scale_id, @scales, :id, :description) %>
    </div>
    <div>
      <%= f.hidden_field :evaluation_id %>
    </div>
    <div>
      <%= f.submit "Guardar", class:"btn btn-success" %>
    </div> 
<% end %>
  